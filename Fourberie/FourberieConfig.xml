<!-- This config system is based on the method used in the mod "Immersive Battlefields" by ShutUpMalfoy-->

<!-- COPY this file in the \Mount & Blade II Bannerlord\Modules folder and RENAME it FourberieConfig_perso to keep your settings after each update-->

<Fourberie.Settings>

<!-- Keybind -->

<!-- Pickpocket -->
<PickPocketHoldButton>LeftAlt</PickPocketHoldButton>                <!-- default is LeftAlt -->
<PickPocketQuickButton>RightMouseButton</PickPocketQuickButton>     <!-- default is RightMouseButton -->

<!-- Loot corpses -->
<LootCorpsesHoldButton>LeftAlt</LootCorpsesHoldButton>              <!-- default is LeftAlt -->
<LootCorpsesOneButton>false</LootCorpsesOneButton>                  <!-- default is    false    set to    true    to use only one button-->
<LootCorpsesButton>RightMouseButton</LootCorpsesButton>             <!-- default is RightMouseButton --> <!-- Can be bound alone if above condition is set to    true -->

<!-- Criminal Enterprise, Safe House, Scheme room quick access -->
<BaseMenuHoldButton>LeftControl</BaseMenuHoldButton>                <!-- default is LeftControl -->
<BaseMenuOneButton>false</BaseMenuOneButton>                        <!-- default is    false    set to    true    to use only one button-->
<BaseMenuButton>F</BaseMenuButton>                                  <!-- default is F --> <!-- Can be bound alone if above condition is set to    true -->

<!-- Horde, Create a bandit party, Saboteurs -->
<HordeMenuHoldButton>LeftControl</HordeMenuHoldButton>              <!-- default is LeftControl -->
<HordeMenuOneButton>false</HordeMenuOneButton>                      <!-- default is    false    set to    true    to use only one button-->
<HordeMenuButton>RightMouseButton</HordeMenuButton>                 <!-- default is RightMouseButton --> <!-- Can be bound alone if above condition is set to    true -->

<!-- Hide, send a distraction when chased -->
<TacticsMenuHoldButton>LeftShift</TacticsMenuHoldButton>            <!-- default is LeftShift -->
<TacticsMenuOneButton>false</TacticsMenuOneButton>                  <!-- default is    false    set to    true    to use only one button-->
<TacticsMenuButton>RightMouseButton</TacticsMenuButton>             <!-- default is RightMouseButton --> <!-- Can be bound alone if above condition is set to    true -->

</Fourberie.Settings>

